<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WeatherApp</title>
  <link rel="stylesheet" href="./styles/main.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <style>
    .intro {
          background-image: url("https://mdbootstrap.com/img/new/fluid/city/018.jpg");
          height: 100vh;
        }
    .flex-container {
            display: flex;
            flex-direction: column;
        }
    .flex-items{
        align-self: center;
    }

    .result{
      min-width: 15rem;
    }

    @media only screen and (max-width: 600px) {
      .result{
        min-width: 15rem;
    }
}
  </style>
</head>

<body>
    
    <div class="intro p-5">
      
        <div class="col-lg-6 col-xxl-4 mx-auto">
            <div class="d-grid gap-2">
              <h3 class="text-center text-light m-5">Weather App</h3>
              <form action="/getWeather" method="post" >
                <input type="text" name="country" autofocus placeholder="Enter city names seperated by comma" class="form-control mb-3">
                <button type="submit" class="btn btn-danger w-100">Search</button>
              </form>
            </div>
          </div>

          <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
            <div class="list-group result">
                
                <% cities.forEach((city)=> { %>
                    <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                              <h6 class="mb-0"><%= Object.keys(JSON.parse(city))[0] %></h6>
                              <p class="mb-0 opacity-75"><%= Object.values(JSON.parse(city))[0] %></p>
                            </div>
                          </div>  
                    </a>
                <% }) %>
            </div>
          </div>
    </div>


<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>

</html>